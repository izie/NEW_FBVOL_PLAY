# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                      controllers.Application.index
POST        /                                      controllers.Application.index

#Game
GET         /Game                                  controllers.Game.index
POST        /Game                                  controllers.Game.index

#User
POST        /User/addUser                          controllers.User.addUser(name:String, email:String, pic_url:String, token:String)
POST        /User/getUserProfile                   controllers.User.getUserProfile(token:String)
POST        /User/getUser                          controllers.User.getUser(token:String)
POST        /User/setUserCurrentRoom               controllers.User.setUserCurrentRoom(seq_room:Int, token:String)
POST        /User/setUserStatusByToken             controllers.User.setUserStatusByToken(status:Int, token:String)


#Chat
GET         /room                                  controllers.Application.chatRoom(username: Option[String])
GET         /room/chat                             controllers.Application.chat(username)
GET         /assets/javascripts/chatroom.js        controllers.Application.chatRoomJs(username: String)

POST        /room                                  controllers.Application.chatRoom(username: Option[String])
POST        /room/chat                             controllers.Application.chat(username)
POST        /assets/javascripts/chatroom.js        controllers.Application.chatRoomJs(username: String)

#Room
POST        /Room/getRooms                         controllers.Room.getRooms
GET         /Room/getRooms                         controllers.Room.getRooms
POST        /Room/getPlayersProfile                controllers.Room.getPlayersProfile(seq:Int, token:String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                          controllers.Assets.at(path="/public", file)

# Javascript Route
GET         /javascriptRoutes                      controllers.Application.javascriptRoutes

